<%= form_for :session, url: login_path, :html => {:id => "login"} do |f| %>

      <%= f.label :email  %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
      
      <%= f.submit 'Login' %>

<% end %>